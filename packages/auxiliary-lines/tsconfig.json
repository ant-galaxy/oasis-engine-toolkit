{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationDir": "types",
    "outDir": "dist",
    "skipLibCheck": true,
    "emitDeclarationOnly": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}
